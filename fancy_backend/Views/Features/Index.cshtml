@model IEnumerable<fancy_backend.Models.Feature>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Fancy_Crud_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.feature_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.feature_text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.feature_img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.feature_url)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.feature_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.feature_text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.feature_img)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.feature_url)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
